<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".ListFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <Button
                android:text="Players List"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/playerListBtn"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="92dp"
                android:layout_marginBottom="32dp"
                app:layout_constraintBottom_toTopOf="@+id/loadPlayersBtn"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="148dp"
                android:layout_marginStart="148dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="148dp"
                android:layout_marginRight="148dp"/>
        <Button
                android:text="Load Players List"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/loadPlayersBtn"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/playerListBtn"
                android:layout_marginBottom="32dp"
                app:layout_constraintBottom_toTopOf="@+id/exitBtn"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="128dp"
                android:layout_marginStart="128dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="128dp"
                android:layout_marginRight="128dp"/>
        <Button
                android:text="Exit App"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/exitBtn"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/loadPlayersBtn"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="355dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="161dp"
                android:layout_marginStart="161dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="162dp"
                android:layout_marginRight="162dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>